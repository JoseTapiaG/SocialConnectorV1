<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">
    <TextView
        android:id="@+id/display_message_contact_text"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_widthPercent="33.3%"
        app:layout_heightPercent="16%"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        android:clickable="true"
        />
    <com.loopj.android.image.SmartImageView
        android:id="@+id/display_message_contact_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_widthPercent="33.3%"
        app:layout_heightPercent="64%"
        android:layout_below="@+id/display_message_contact_text"
        android:scaleType="centerCrop"
        android:clickable="true"/>
    <TextView
        android:id="@+id/display_message_text_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="43.4%"
        app:layout_heightPercent="61.5%"
        app:layout_marginTopPercent="7.7%"
        android:layout_toRightOf="@+id/display_message_contact_text"
        android:paddingRight="10dip"
        android:textColor="@color/black"
        android:textSize="44sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="left"
        />
    <TextView
        android:id="@+id/display_message_text_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="43.4%"
        app:layout_heightPercent="7.7%"
        android:layout_toRightOf="@+id/display_message_contact_text"
        android:layout_below="@+id/display_message_text_content"
        android:textColor="@color/grayFromIcons"
        android:textSize="24sp"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="left"
        />
    <ImageView
        android:id="@+id/display_message_left_arrow_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="14.5%"
        app:layout_heightPercent="15.4%"
        android:layout_toRightOf="@+id/display_message_contact_image"
        android:layout_below="@+id/display_message_text_info"
        android:src="@drawable/top_left_128"
        android:scaleType="fitCenter"
        android:contentDescription="@string/profile_picture_description"/>
    <TextView
        android:id="@+id/display_message_left_arrow_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="14.5%"
        app:layout_heightPercent="7.7%"
        android:layout_toRightOf="@+id/display_message_contact_image"
        android:layout_below="@+id/display_message_left_arrow_image"
        android:text="@string/new_messages_left_arrow"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/display_message_count"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="14.4%"
        app:layout_heightPercent="23.1%"
        android:layout_toRightOf="@+id/display_message_left_arrow_image"
        android:layout_below="@+id/display_message_text_info"
        android:textColor="@color/black"
        android:textSize="48sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/display_message_right_arrow_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="14.5%"
        app:layout_heightPercent="15.4%"
        android:layout_toRightOf="@+id/display_message_count"
        android:layout_below="@+id/display_message_text_info"
        android:src="@drawable/top_right_128"
        android:scaleType="fitCenter"
        android:contentDescription="@string/profile_picture_description"/>
    <TextView
        android:id="@+id/display_message_right_arrow_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="14.5%"
        app:layout_heightPercent="7.7%"
        android:layout_toRightOf="@+id/display_message_count"
        android:layout_below="@+id/display_message_right_arrow_image"
        android:text="@string/new_messages_right_arrow"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/display_message_right_button_up_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="23.3%"
        app:layout_heightPercent="33.4%"
        app:layout_marginTopPercent="8.3%"
        android:layout_toRightOf="@+id/display_message_text_content"
        android:contentDescription="@string/phone_description"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/display_message_right_button_up_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="23.3%"
        app:layout_heightPercent="8.3%"
        android:layout_toRightOf="@+id/display_message_text_content"
        android:layout_below="@+id/display_message_right_button_up_image"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        />
    <ImageView
        android:id="@+id/display_message_right_button_down_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="23.3%"
        app:layout_heightPercent="33.4%"
        android:layout_toRightOf="@+id/display_message_text_content"
        android:layout_below="@+id/display_message_right_button_up_text"
        android:contentDescription="@string/phone_description"
        android:scaleType="fitCenter"/>
    <TextView
        android:id="@+id/display_message_right_button_down_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="23.3%"
        app:layout_heightPercent="8.3%"
        android:layout_toRightOf="@+id/display_message_text_content"
        android:layout_below="@+id/display_message_right_button_down_image"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        />
</android.support.percent.PercentRelativeLayout>
