<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/contact_list_top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:baselineAligned="false"
            >
    <TextView
        android:id="@+id/contact_list_top_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="17.5%"
        app:layout_marginTopPercent="2.5%"
        app:layout_marginLeftPercent="12.5%"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:scaleType="fitCenter"
        android:gravity="center_vertical"
        />
    <ImageView
        android:id="@+id/contact_list_left_arrow_image"
        android:src="@drawable/top_left_128"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="12.5%"
        app:layout_heightPercent="50%"
        app:layout_marginTopPercent="12.5%"
        android:layout_below="@+id/contact_list_top_message"
        android:scaleType="fitCenter"
        android:contentDescription="@string/profile_picture_description"
        />
    <TextView
        android:id="@+id/contact_list_left_arrow_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="12.5%"
        app:layout_heightPercent="50%"
        android:layout_below="@+id/contact_list_left_arrow_image"
        android:textColor="@color/black"
        android:contentDescription="@string/profile_picture_description"
        android:text="@string/contact_list_left_arrow_text"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        />
    <com.loopj.android.image.SmartImageView
        android:id="@+id/contact_1_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="53.3%"
        android:layout_below="@+id/contact_list_top_message"
        android:layout_toRightOf="@+id/contact_list_left_arrow_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerCrop"
        android:clickable="true"/>
    <TextView
        android:id="@+id/contact_1_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="26.7%"
        android:layout_below="@+id/contact_1_image"
        android:layout_toRightOf="@+id/contact_list_left_arrow_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        android:clickable="true"
        />
    <com.loopj.android.image.SmartImageView
        android:id="@+id/contact_2_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="53.3%"
        android:layout_below="@+id/contact_list_top_message"
        android:layout_toRightOf="@+id/contact_1_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerCrop"
        android:clickable="true"/>
    <TextView
        android:id="@+id/contact_2_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="26.7%"
        android:layout_below="@+id/contact_2_image"
        android:layout_toRightOf="@+id/contact_1_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        android:clickable="true"
        />
    <com.loopj.android.image.SmartImageView
        android:id="@+id/contact_3_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="53.3%"
        android:layout_below="@+id/contact_list_top_message"
        android:layout_toRightOf="@+id/contact_2_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerCrop"
        android:clickable="true"/>
    <TextView
        android:id="@+id/contact_3_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="25%"
        app:layout_heightPercent="26.7%"
        android:layout_below="@+id/contact_3_image"
        android:layout_toRightOf="@+id/contact_2_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        android:contentDescription="@string/profile_picture_description"
        android:gravity="center"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/contact_list_right_arrow_image"
        android:src="@drawable/top_right_128"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="12.5%"
        app:layout_heightPercent="50%"
        app:layout_marginTopPercent="12.5%"
        android:layout_below="@+id/contact_list_top_message"
        android:layout_toRightOf="@+id/contact_3_image"
        android:scaleType="fitCenter"
        android:contentDescription="@string/profile_picture_description"
        />
    <TextView
        android:id="@+id/contact_list_right_arrow_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_widthPercent="12.5%"
        app:layout_heightPercent="50%"
        android:layout_below="@+id/contact_list_right_arrow_image"
        app:layout_marginRightPercent="0%"
        android:layout_toRightOf="@id/contact_3_text"
        android:textColor="@color/black"
        android:contentDescription="@string/profile_picture_description"
        android:text="@string/contact_list_right_arrow_text"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        />
</android.support.percent.PercentRelativeLayout>